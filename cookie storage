name: Steal Cookie

on:
  push:
    branches:
      - main

jobs:
  steal-cookie:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v3

      - name: Steal Cookie
        run: |
          echo "cookie_name=cookie_value" > cookies.txt

      - name: Upload Cookie
        uses: actions/upload-artifact@v3
        with:
          name: cookies
          path: cookies.txt
